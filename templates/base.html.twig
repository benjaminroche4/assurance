<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>{% block title %}{% endblock %}</title>
        <link rel="icon" href="{{ asset('media/logo/favicon.ico') }}" />

        <!-- Google tag (gtag.js) -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-WTHX58Q2Q2"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date()); gtag('config', 'G-WTHX58Q2Q2');
        </script>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            <script defer src="https://unpkg.com/@alpinejs/ui@3.14.3-beta.0/dist/cdn.min.js"></script>
            <script defer src="https://unpkg.com/@alpinejs/focus@3.14.3/dist/cdn.min.js"></script>
            <script defer src="https://unpkg.com/alpinejs@3.14.3/dist/cdn.min.js"></script>
        {% endblock %}
    </head>
    <body>
        {% include 'components/header.html.twig' %}
        <main>
            {% block body %}{% endblock %}
        </main>
        {% include 'components/footer.html.twig' %}
    </body>
</html>
