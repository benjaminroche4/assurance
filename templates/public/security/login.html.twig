{% extends 'base_auth.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <main class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
        <section class="sm:mx-auto sm:w-full sm:max-w-sm">
            <a href="{{ path('app_home') }}">
                <img class="mx-auto h-7 w-auto" src="{{ asset('media/logo/logo-dark.svg') }}" alt="Your Company">
            </a>
            <h2 class="mt-10 text-center text-pretty text-2xl/9 font-bold tracking-tight text-gray-900">
                Connexion à votre espace client
            </h2>
        </section>
        <section class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
            <form class="space-y-6" action="#" method="POST">
                {% if error %}
                    <div class="rounded-md bg-red-50 p-4">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm font-medium text-red-800">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                            </div>
                        </div>
                    </div>
                {% endif %}
                <div>
                    <label for="username" class="block text-sm/6 font-medium text-gray-900 font-primary">Adresse email</label>
                    <div class="mt-2">
                        <input id="username" value="{{ last_username }}" name="_username" type="email" autocomplete="email" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary sm:text-sm/6">
                    </div>
                </div>
                <div>
                    <div class="flex items-center justify-between">
                        <label for="password" class="block text-sm/6 font-medium text-gray-900 font-primary">Mot de passe</label>
                        <div class="text-xs">
                            <p class="font-semibold font-primary text-gray-400 hover:text-gray-700 transition duration-100">Mot de passe oublié</p>
                        </div>
                    </div>
                    <div class="mt-2">
                        <input id="password" name="password" type="password" autocomplete="current-password" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary sm:text-sm/6">
                    </div>
                </div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <div>
                    <button type="submit" class="flex w-full justify-center rounded-full bg-primary font-primary px-3 py-2.5 text-sm/6 font-semibold text-white shadow-sm hover:bg-primary-light transition duration-100">Se connecter</button>
                </div>
            </form>
            <div class="grid grid-cols-1 sm:grid-cols-2 divide-y sm:divide-y-0 sm:divide-x mt-10">
                <div>
                    <p class="text-center text-xs text-gray-500 p-2">
                        <a href="{{ path('app_contact') }}" class="font-medium font-primary text-gray-900 hover:text-gray-600 transition duration-100">Pas encore client ?</a>
                    </p>
                </div>
                <div>
                    <p class="text-center text-xs text-gray-500 p-2">
                        <a href="{{ path('app_home') }}" class="font-medium font-primary text-gray-900 hover:text-gray-600 transition duration-100">Revenir au site <span aria-hidden="true">→</span></a>
                    </p>
                </div>
            </div>
        </section>
    </main>
{% endblock %}