    <section class="py-12 sm:py-20">
        <div class="mx-auto max-w-2xl lg:max-w-7xl px-6 lg:px-8">
            <div class="mx-auto max-w-2xl lg:mx-0">
                <p class="text-sm font-semibold leading-7 text-primary uppercase tracking-wide">Blog & Actualités</p>
                <h2 class="mt-2 text-pretty text-3xl font-semibold tracking-tight text-gray-900 sm:text-4xl lg:text-balance">Nos derniers articles</h2>
            </div>
            <div class="mx-auto mt-14 grid max-w-2xl auto-rows-fr grid-cols-1 gap-8 lg:mx-0 lg:max-w-none lg:grid-cols-3">
                {% for post in lastPosts %}
                    <article class="relative isolate flex rounded-3xl flex-col justify-end overflow-hidden bg-gray-900 px-8 pb-8 pt-80 sm:pt-48 lg:pt-80">
                        <img src="{{ asset('media/blog/'~post.mainPhoto) }}" alt="{{ post.altMainPhoto }}" class="absolute inset-0 -z-10 h-full w-full object-cover">
                        <div class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40"></div>
                        <div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
                        <div class="flex flex-wrap items-center gap-y-1 overflow-hidden text-sm leading-6 text-gray-300">
                            <time datetime="{{ post.createdAt | date('d F Y') }}" class="mr-8 capitalize">{{ post.createdAt | date('d F Y') | format_date(locale='fr') }}</time>
                            <div class="-ml-4 flex items-center gap-x-4">
                                <svg viewBox="0 0 2 2" class="-ml-0.5 h-0.5 w-0.5 flex-none fill-white/50">
                                    <circle cx="1" cy="1" r="1" />
                                </svg>
                                <div class="flex gap-x-2.5">
                                    <img src="{{ asset('media/editor/'~post.authorProfilePhoto) }}" alt="Photo de profil du rédacteur de l'article" class="h-6 w-6 flex-none rounded-full bg-white/10">
                                    {{ post.authorName }}
                                </div>
                            </div>
                        </div>
                        <h2 class="mt-3 text-lg font-semibold leading-6 text-white">
                            <a href="{{ path('app_blog_post', {'slug': post.slug }) }}">
                                <span class="absolute inset-0"></span>
                                {{ post.title }}
                            </a>
                        </h2>
                    </article>
                {% endfor %}
            </div>
        </div>
    </section>
